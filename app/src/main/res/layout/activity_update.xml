<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/stdid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Enrollment No"
            android:inputType="number" />


        <Button
            android:id="@+id/btnselectstdupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select ID" />

        <EditText
            android:id="@+id/edittextEnno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/edittextstdname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edittextseme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/btnconfirmdupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Update" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>